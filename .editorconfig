# EditorConfig helps maintain consistent coding styles across various editors and IDEs
# See https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = true
indent_size = 2

[*.yml]
indent_size = 2

[*.js]
indent_size = 4